<Window x:Class="corvus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:corvus"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="white" HorizontalAlignment="Left" Height="320" Margin="0,1,0,-1" VerticalAlignment="Top" Width="517">
            <Button x:Name="toRed" Content="red" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="133" Canvas.Left="10" Canvas.Top="10" Click="toRed_Click"/>
            <Button x:Name="toBlue" Content="blue" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="133" Canvas.Left="10" Canvas.Top="70" Click="toBlue_Click"/>
        </Canvas>
        <Canvas x:Name="red" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="517" Background="#FFFF7575" Margin="518,1,-518,-1">
            <Button x:Name="toWhite" Content="white" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="133" Canvas.Left="10" Canvas.Top="10" Click="toWhite_Click"/>
        </Canvas>
        <Canvas x:Name="blue" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="517" Background="#FF757BFF" Margin="1,321,-1,-321">
            <Button x:Name="toWhiteFromBlue" Content="white" HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="133" Canvas.Left="10" Canvas.Top="10" Click="toWhiteFromBlue_Click"/>
        </Canvas>
    </Grid>
</Window>
